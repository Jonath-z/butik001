<%- include("partials/header"); -%>
<br><br><br>
    <div class="container col-12 col-sm-10 col-md-9 d-flex flex-column align-items-center">
      <h3 class="command">Special command</h3>

      <hr>

      <form class="col-sm-10">
        <div class="form-group row">
          <label class="col-form-label col-sm-4 col-md-3 col-lg-2" for="user-name">Name</label>
          <div class="input-group col-sm-8 col-md-9 col-lg-10">
            <input type="text" class="form-control" id="user-name" placeholder="your name..">
          </div>
        </div>
        
        <div class="form-group row">
          <label class="control-label col-sm-4 col-md-3 col-lg-2" for="user-surname">Last name</label>
          <div class="input-group col-sm-8 col-md-9 col-lg-10">

            <input type="text" class="form-control" id="user-surname" placeholder="last name...">
          </div>
        </div>
        
        <div class="form-group row">
          <label class="control-label col-sm-4 col-md-3 col-lg-2" for="email">E-mail</label>
          <div class="input-group col-sm-8 col-md-9 col-lg-10">
           
            <input type="email" class="form-control" id="email" placeholder="E-mail address">
          </div>
        </div>

        
        <div class="form-group row">
            <label class="control-label col-sm-4 col-md-3 col-lg-2" for="email">Counry</label>
            <div class="input-group col-sm-8 col-md-9 col-lg-10">
             
                <div class="form-check">
                    <input class="form-check-input" type="radio" name="flexRadioDisabled" id="congo" checked >
                    <label class="form-check-label" for="congo">
                      DRC Congo
                    </label><br>
                    <input class="form-check-input" type="radio" name="flexRadioDisabled" id="rwanda"  >
                    <label class="form-check-label" for="rwanda">
                      Rwanda
                    </label><br>
                    <input class="form-check-input" type="radio" name="flexRadioDisabled" id="burundi"  >
                    <label class="form-check-label" for="burundi">
                      Burundi
                    </label>
                  </div>
            </div>
          </div>
        <div class="form-group row">
          <label class="control-label col-sm-4 col-md-3 col-lg-2" for="number">Phone </label>
          <div class="input-group col-sm-8 col-md-9 col-lg-10">

            <input type="tel" class="form-control" id="number" placeholder="+250...">
          </div>
        </div>

        <div class="form-group row">
            <label class="control-label col-sm-4 col-md-3 col-lg-2" for="number">image </label>
            <div class="input-group col-sm-8 col-md-9 col-lg-10">
              <span class="input-group-addon">
                
              </span>
              <input type="file" class="form-control" id="number" >
            </div>
          </div>
       
        
        <div class="form-group row">
          <label class="control-label col-sm-4 col-md-3 col-lg-2" for="message">Details</label>
          <div class="input-group col-sm-8 col-md-9 col-lg-10">
            <textarea class="form-control" rows="3" placeholder="oder details.." id="message"></textarea> 
          </div>
        </div>
        <br>    

        <button style="margin-left: 25px;"  type="submit" class="btn btn-warning"> Send
            <i class="fa fa-paper-plane"></i></button>
        <br>

    </form>

    </div>    
    
